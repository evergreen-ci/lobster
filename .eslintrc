{
  "parser": "babel-eslint",
  "extends": "eslint-config-mongodb-js",
  "root": true,
  "rules": {
    "no-console": "off",
  },
  "env": {
    "es6": true
  },
  "overrides": [
    {
      "files": "src/**/*.js",
      "env": {
        "browser": true,
      },
      "plugins": ["react", "jest", "babel"],
      "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      },
    },
    {
      "files": ["server/**/*.js"],
      "env": {
        "node": true,
        "parserOptions": {
            "sourceType": "scripts",
        },
      },
      "rules": {
        "no-sync": "warn",
      }
    },
    {
      "files": [".babelrc"],
      "env": {
        "node": true,
        "parserOptions": {
          "sourceType": "scripts",
        },
      },
    }
  ]
}
